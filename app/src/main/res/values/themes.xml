<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ShoppingApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#D61010</item>
        <item name="colorPrimaryVariant">#4E5997</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1D99D1</item>
        <item name="colorSecondaryVariant">#DDC80F</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/primaryColor</item>

        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="myStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@color/white</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="progressColor">
        <item name="colorAccent">@color/primaryColor</item> <!-- Whatever color you want-->
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>
    <style name="PopupStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="popupMenuBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.ShoppingApp" parent="Base.Theme.ShoppingApp" />
</resources>