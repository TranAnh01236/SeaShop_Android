<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.register.InfoAccountFragment">

    <RelativeLayout
        android:id="@+id/relative_layout_1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/custom_panel_multi_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký thành viên mới"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_2"
        android:layout_width="match_parent"
        android:layout_below="@id/relative_layout_1"
        android:layout_marginTop="-75dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_border_with_shadow"
        android:padding="15dp">

        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="1/3"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/text_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Để đảm bảo quyền lợi cá nhân, khách hàng voi lòng điển chính xác thông tin cá nhân"
            android:layout_below="@id/text_view_1"
            android:layout_marginTop="5dp"/>

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primaryColor_2"
            android:layout_below="@id/text_view_3"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/text_view_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ"
            android:layout_below="@id/view_1"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/edit_text_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:hint="Nhập họ"
            android:layout_below="@id/text_view_4"
            android:inputType="text"
            android:backgroundTint="@color/light_gray"/>

        <TextView
            android:id="@+id/text_view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:layout_below="@id/edit_text_first_name"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/edit_text_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:hint="Nhập tên"
            android:inputType="text"
            android:layout_below="@id/text_view_5"
            android:backgroundTint="@color/light_gray"/>

        <TextView
            android:id="@+id/text_view_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CCCD/CMND"
            android:layout_below="@id/edit_text_last_name"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/edit_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:layout_marginTop="5dp"
            android:hint="Nhập CCCD/CMND"
            android:inputType="number"
            android:layout_below="@id/text_view_6"
            android:backgroundTint="@color/light_gray"/>

        <TextView
            android:id="@+id/text_view_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:layout_below="@id/edit_text_id"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/edit_text_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:layout_marginTop="5dp"
            android:hint="Nhập số điện thoại"
            android:inputType="none"
            android:layout_below="@id/text_view_7"
            android:backgroundTint="@color/light_gray"/>

        <TextView
            android:id="@+id/text_view_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:layout_below="@id/edit_text_phone"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/edit_text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:layout_marginTop="5dp"
            android:hint="Nhập ngày sinh"
            android:inputType="none"
            android:layout_below="@id/text_view_8"
            android:backgroundTint="@color/light_gray"/>

        <TextView
            android:id="@+id/text_view_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính"
            android:layout_below="@id/edit_text_date"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text_date"
            android:layout_toRightOf="@id/text_view_9"
            android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio_button_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:textSize="20dp"
                    android:textColor="@color/dark_gray"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/radio_button_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:textSize="20dp"
                    android:textColor="@color/dark_gray"/>
        </RadioGroup>

        <TextView
            android:id="@+id/text_view_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/red_error"
            android:layout_below="@id/radio_group"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_layout_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/custom_btn_addcart"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp tục"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />

    </LinearLayout>

</RelativeLayout>