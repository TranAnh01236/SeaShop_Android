<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.register.PhoneFragment">

    <RelativeLayout
        android:id="@+id/relative_layout_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp">

        <ImageButton
            android:id="@+id/image_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow_3"
            android:background="@color/trans"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:id="@+id/view_1"
        android:layout_below="@id/relative_layout_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primaryColor_2"/>

    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_1"
        android:layout_marginTop="15dp"
        android:text="Vui lòng nhập số điện thoại của bạn để tạo tài khoản mới"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <EditText
        android:id="@+id/edit_text_phone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/light_gray"
        android:drawableLeft="@drawable/ic_phone"
        android:hint="Số điện thoại"
        android:inputType="number"
        android:drawablePadding="10dp"
        android:layout_below="@id/text_view_1"
        android:imeOptions="actionDone"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/text_view_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_phone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/red_error"/>

    <TextView
        android:id="@+id/text_view_2"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/text_view_error"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiếp tục có nghĩa là bạn đồng ý"/>

    <TextView
        android:id="@+id/text_view_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Các điều khoản của IMall"
        android:layout_marginTop="30dp"
        android:textColor="@color/primaryColor_2"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/text_view_2"
        android:layout_marginRight="15dp"
        android:layout_below="@id/text_view_error"/>

    <LinearLayout
        android:id="@+id/linear_layout_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_btn_addcart"
        android:textColor="@color/white"
        android:layout_below="@id/text_view_2"
        android:padding="10dp"
        android:clickable="false"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp tục"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/text_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã có tài khoản?"
            />

        <TextView
            android:id="@+id/text_view_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="@color/primaryColor_2"
            android:layout_toRightOf="@id/text_view_3"
            android:layout_marginLeft="5dp"
            />

    </RelativeLayout>

</RelativeLayout>